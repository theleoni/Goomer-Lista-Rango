{
  "name": "goomer",
  "version": "0.0.1",
  "scripts": {
    "start:dev": "nodemon",
    "start": "node -r module-alias/register ./dist --env=developement",
    "build": "del-cli ./dist && tsc --build tsconfig.prod.json",
    "builder": "node build.js",
    "lint": "tslint --project \"tsconfig.json\"",
    "test": "jest --testTimeout=10000",
    "docker": "npm run docker:build && npm run docker:run",
    "docker:build": "docker build . -t theleoni/goomer",
    "docker:run": "docker run -p 3000:3000 -d theleoni/goomer"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@daos": "dist/daos",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "del-cli": "^4.0.0",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.12",
    "@types/find": "^0.2.1",
    "@types/helmet": "^0.0.48",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.17.4",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "find": "^0.3.0",
    "fs-extra": "^9.1.0",
    "git-cz": "^4.7.6",
    "jsonfile": "^6.1.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  }
}
